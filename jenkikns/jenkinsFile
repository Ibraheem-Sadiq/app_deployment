pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
             sh  'docker build  -t frontEnd:$BUILD_NUMBER  server'
             sh  'docker build  -t backEnd:$BUILD_NUMBER  client'
            }
        }

     stage('Push') {
            steps {
             sh  'docker push frontEnd:$BUILD_NUMBER'
             sh  'docker push backEnd:$BUILD_NUMBER' 
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('notify argocd by updating version') {
            steps {
                sh  'sed -i -E "s/e_commerc*/e_commerce/server:($BUILD_NUMBER)/"'
                sh  'sed -i -E "s/e_commerc*/e_commerce/client:($BUILD_NUMBER)/"'
            }
        }
    }
}